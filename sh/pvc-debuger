#!/bin/bash

kubectl run -it --rm pvc-debugger \    --namespace user-inference-ns \    --image=busybox:1.36 \    --overrides='        {          "spec": {            "volumes": [{              "name": "data-volume",              "persistentVolumeClaim": {"claimName": "model-pvc"}            }],            "containers": [{              "name": "debugger",              "image": "busybox:1.36",              "volumeMounts": [{                "mountPath": "/mnt/pvc-data",                "name": "data-volume"              }],              "command": ["/bin/sh"],              "stdin": true,              "tty": true            }]          }        }    '